<head title="聊天" backShow="{{false}}" bgcolor="#252837"></head>
<view class="chat" style="padding-top:{{navHeight}}px;height:calc(100vh - {{navHeight}}px - 28rpx)">
<view class="chatdetail">
  <view class="scroll">
    <view class="scroll-view">
      <scroll-view scroll-y="true" style="height:100%">
        <view class="chatList" wx:for="{{18}}" wx:key="index">
          <view class="listDetail" id="{{index}}" bindtap="goToChatDetail">
            <view class="avaUrl">
              <image src="{{avatarUrl}}"></image>
            </view>
            <view class="words">
              <view class="nickName">{{NpcName}}</view>
              <view class="chatContent">{{userName}}：<text>{{chatContent}}</text></view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
</view>
</view>