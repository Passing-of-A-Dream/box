.chatdetail {
  background: #252837;
  color: #fff;
}

.chatdetail .proposition-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.chatdetail .proposition-container .proposition {
  margin-top: 34rpx;
  width: 656rpx;
  height: 170rpx;
  border-radius: 16rpx;
  background: #2b2f3f;
  padding: 32rpx;
}

.chatdetail .proposition-container .proposition .propositionDetail {
  height: 36rpx;
  display: flex;
  justify-content: space-between;
}

.chatdetail .proposition-container .proposition .propositionDetail text {
  font-family: GenJyuuGothic-Bold;
  font-size: 34rpx;
  font-weight: bold;
}

.chatdetail .proposition-container .proposition .propositionDetail .state {
  width: 125rpx;
  height: 26rpx;
  display: flex;
  align-items: center;
}

.chatdetail .proposition-container .proposition .propositionDetail .state text {
  font-family: GenJyuuGothic-Bold;
  font-size: 26rpx;
  font-weight: bold;
  color: #0fc1b5;
}

.chatdetail .proposition-container .proposition .propositionDetail .state image {
  width: 16rpx;
  height: 26rpx;
  margin-left: 24rpx;
}

.chatdetail .proposition-container .proposition .userAvact {
  height: calc(100% - 55rpx);
  margin-top: 38rpx;
  display: flex;
  justify-content: space-between;
}

.chatdetail .proposition-container .proposition .userAvact .AvactCcroll {
  height: 100%;
  width: 80%;
  display: flex;
  white-space: nowrap;
}

.chatdetail .proposition-container .proposition .userAvact .AvactCcroll .AvactImg {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin-left: 18rpx;
}

.chatdetail .proposition-container .proposition .userAvact .AvactCcroll .AvactImg .AvactImgShow {
  width: 100%;
  height: 100%;
}

.chatdetail .proposition-container .proposition .userAvact .AvactCcroll .AvactImg .AvactImgShow image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.chatdetail .proposition-container .proposition .userAvact .peoples {
  font-family: NunitoSans-Bold;
  font-size: 29rpx;
  color: rgba(255, 255, 255, 0.3);
  line-height: 80rpx;
}
