.loginIn {
  background: #252837;
  width: calc(100% - 64px);
  padding: 0 32px 40rpx 32px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loginIn .head {
  width: 100%;
  height: 96px;
  margin-top: 52px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginIn .head .avatar {
  height: 100%;
  width: 96px;
  position: relative;
}

.loginIn .head .avatar .image {
  border-radius: 50%;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.loginIn .head .avatar .image image {
  height: 100%;
  width: 100%;
}

.loginIn .head .avatar .icon {
  position: absolute;
  right: -3px;
  bottom: -3px;
  height: 32px;
  width: 32px;
  border-radius: 50%;
  overflow: hidden;
}

.loginIn .head .avatar .icon image {
  height: 100%;
  width: 100%;
}

.loginIn .sex {
  margin-top: 32px;
  color: #fff;
}

.loginIn .sex .select .weui-radio-label {
  margin-top: 14px;
  padding: 0 14px;
  width: 283px;
  height: 50px;
  background: #303342;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.loginIn .sex .select .weui-radio-label .weui-radio-name {
  display: flex;
  font-family: SFUIDisplay-Medium;
  font-size: 15px;
}

.loginIn .sex .select .weui-radio-label .weui-radio-name image {
  margin-right: 25.38px;
  width: 20.61px;
  height: 20.62px;
}

.loginIn .sex text {
  display: block;
  margin-top: 16px;
  color: rgba(255, 255, 255, 0.3);
}

.loginIn .age {
  margin-top: 21px;
}

.loginIn .age .select {
  margin-top: 14px;
  padding: 0 14px;
  width: 283px;
  height: 50px;
  background: #303342;
  border-radius: 5px;
}

.loginIn .age .select .weui-picker {
  width: 100%;
  height: 100%;
  font-size: 35px;
}

.loginIn .age .select .weui-picker .picker {
  width: 100%;
  padding: 14.5px 0;
  font-family: SFUIDisplay-Medium;
  font-size: 16px;
  color: rgba(255, 255, 255, 0.3);
}

.loginIn .name {
  margin-top: 21px;
}

.loginIn .name .input {
  margin-top: 14px;
  padding: 0 14px;
  width: 283px;
  height: 50px;
  background: #303342;
  border-radius: 5px;
  line-height: 50px;
  font-family: SFUIDisplay-Medium;
  font-size: 15px;
  color: rgba(255, 255, 255, 0.3);
}

.loginIn .name .input input {
  height: 100%;
  width: 100%;
}

.loginIn .button {
  margin-top: 60rpx;
  margin-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.loginIn .button button {
  width: 314px;
  height: 50px;
  margin: 0;
  line-height: 50px;
  background: #0fc1b5;
  color: #fff;
  font-family: GenJyuuGothic-Bold;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50px;
}

.title {
  font-family: GenJyuuGothic-Bold;
  font-size: 24px;
  font-weight: bold;
  color: #fff;
}
