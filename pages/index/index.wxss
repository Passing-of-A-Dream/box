.container {
  width: 100%;
}

.container .background {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -999;
  width: 100%;
  height: 100%;
}

.container .background .map {
  height: 100%;
  width: 100%;
}

.container .mantle {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -990;
  height: 100%;
  width: 100%;
  background: rgba(34, 37, 51, 0.7);
}

.container .index {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.container .index .top {
  height: 40px;
  width: 69px;
  position: absolute;
  top: 0;
  left: 40rpx;
  z-index: 99;
}

.container .index .top image {
  height: 100%;
  width: 100%;
}

.container .index .content {
  margin-top: 210rpx;
  border: 1px solid chartreuse;
  width: 716rpx;
  height: 716rpx;
}
